<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'users/profile', user: @user, book: @book %>
    </div>
    <div class="col-xs-9">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= attachment_image_tag @books.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %><br />
              <%= link_to @books.user.name, user_path(@books.user.id) %>
            </td>
            <td><%= @books.title %></td>
            <td><%= @books.body %></td>
            <% if @books.user.id == current_user.id %>
              <td><%= link_to "Edit",edit_book_path(@books.id), class:"btn-sm btn-success" %></td>
              <td><%= link_to "Destroy",book_path, method: :delete, data:{confirm:'本当に削除しますか？'}, class:"btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>