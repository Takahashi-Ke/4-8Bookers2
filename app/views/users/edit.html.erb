<div class="container">
  <h2>User info</h2>
  <% if @user.errors.any? %>
    <div class="error_explanation" >
      <h3><span><%= @user.errors.count %></span>error prohibited this obj from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with model: @user,url: user_path(current_user.id), local: true do |f| %>
    <div class="field">
      <%= f.label :Name %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>
    <div class="field">
      <%= f.label :Image %>
      <%= f.attachment_field :profile_image %>
    </div>
    <div class="field">
      <%= f.label :Introduction %>
      <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
    </div>
    <div class="action">
      <%= f.submit "Update User" %>
    </div>
  <% end %>
</div>
