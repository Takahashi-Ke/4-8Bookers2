<% if @user.errors.any? %>
  <div id="error_explanation" >
    <h3>
      <span><%= @user.errors.count %></span>
      error prohibited this obj from being saved:
    </h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<h2>User info</h2>
<%= form_with model: @user,url: user_path(current_user.id), local: true do |f| %>
  <div class="field">
    <%= f.label :Name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  <div class="field">
    <%= f.label :Image %><br />
    <%= f.attachment_field :profile_image %>
  </div>
  <div class="field">
    <%= f.label :Introduction %><br />
    <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
  </div>
  <div class="action">
    <%= f.submit "Update User" %>
  </div>

<% end %>