<div class="notice">
  <%= flash[:success] %>
</div>


<h2>User info</h2>
  <div class="user-image">
    <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %>
  </div>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <%= link_to "", edit_user_path(current_user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
  </div>
  <a  href="/users/26267/edit"></a>

<h2>New book</h2>
<%= form_with model: book,url: books_path, local: true do |f| %>
    <div class="field row">
        <%= f.label :title %><br />
        <%= f.text_field :title, class:"input" %>
    </div>
    <div class="field row">
        <%= f.label :opinion %><br />
        <%= f.text_area :body, class:"input"  %>
    </div>
    <div class="actions row">
          <%= f.submit "Create Book", class:"btn col-xs-12" %>
    </div>
<% end %>